{
  "name": "projectify-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@emotion/jest": "^11.5.0",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@fontsource/roboto": "^4.5.1",
    "@hookform/resolvers": "^2.8.2",
    "@mui/icons-material": "^5.0.4",
    "@mui/material": "^5.0.4",
    "@sentry/react": "^6.13.3",
    "@sentry/tracing": "^6.13.3",
    "apollo-link-rest": "^0.8.0-beta.0",
    "apollo-upload-client": "^16.0.0",
    "framer-motion": "^4.1.17",
    "history": "^5.0.1",
    "husky": "^7.0.2",
    "i18next": "^21.3.2",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-http-backend": "^1.3.1",
    "oidc-client": "^1.11.5",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.17.4",
    "react-i18next": "^11.12.0",
    "react-router": "^6.0.0-beta.7",
    "react-router-dom": "^6.0.0-beta.7",
    "react-scripts": "4.0.3",
    "react-toastify": "^8.0.3",
    "typescript": "^4.3.5",
    "web-vitals": "^2.1.2",
    "yup": "^0.32.11"
  },
  "jest": {
    "snapshotSerializers": [
      "@emotion/jest/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/generated/**.*",
      "!src/utils/AuthManager.ts",
      "!src/**/*.stories.{ts,tsx}",
      "!src/utils/i18n.ts",
      "!src/index.tsx",
      "!src/react-app-env.d.ts",
      "!src/reportWebVitals.ts",
      "!src/setupTests.ts",
      "!src/twin.d.ts",
      "!src/**/*.test.{ts,tsx}",
      "!src/apollo/client.ts",
      "!src/**/*.styles.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "CI=true npm run test -- --coverage",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "generate-graphql": "DOTENV_CONFIG_PATH=\"./.env.codegen.local\" graphql-codegen --require dotenv/config --config codegen.yml"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/typescript": "^2.2.4",
    "@graphql-codegen/typescript-operations": "^2.1.8",
    "@graphql-codegen/typescript-react-apollo": "^3.1.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/apollo-upload-client": "^14.1.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.1",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.1",
    "graphql-anywhere": "^4.2.7",
    "lint-staged": "^11.2.3",
    "poeditor": "git+https://github.com/TerenYeung/poeditor-cli.git#master",
    "prettier": "^2.4.1"
  }
}
