{
  "name": "projectify-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@emotion/jest": "^11.3.0",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@heroicons/react": "^1.0.3",
    "@hookform/error-message": "^2.0.0",
    "@hookform/resolvers": "^2.6.1",
    "@sentry/react": "^6.10.0",
    "@sentry/tracing": "^6.10.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.5",
    "@types/react-dom": "^17.0.9",
    "apollo-link-rest": "^0.8.0-beta.0",
    "apollo-upload-client": "^16.0.0",
    "framer-motion": "^4.1.17",
    "graphql": "^15.5.1",
    "graphql-anywhere": "^4.2.7",
    "husky": "^7.0.1",
    "i18next": "^20.3.5",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-http-backend": "^1.2.8",
    "jest-each": "^27.0.6",
    "lint-staged": "^11.1.1",
    "oidc-client": "^1.11.5",
    "prettier": "^2.3.2",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.4",
    "react-hook-form": "^7.12.1",
    "react-i18next": "^11.11.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-toastify": "^7.0.4",
    "snapshot-diff": "^0.9.0",
    "tailwindcss": "^2.2.7",
    "twin.macro": "^2.6.2",
    "typescript": "^4.3.5",
    "web-vitals": "^2.1.0",
    "yup": "^0.32.9"
  },
  "jest": {
    "snapshotSerializers": [
      "@emotion/jest/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/utils/AuthManager.ts",
      "!src/**/*.stories.{ts,tsx}",
      "!src/utils/i18n.ts",
      "!src/index.tsx",
      "!src/react-app-env.d.ts",
      "!src/reportWebVitals.ts",
      "!src/setupTests.ts",
      "!src/twin.d.ts",
      "!src/**/*.test.{ts,tsx}",
      "!src/apollo/client.ts",
      "!src/**/*.styles.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "download-schema": "apollo service:download --endpoint=http://localhost:8001/api/graphql graphql/graphql-schema.json",
    "codegen": "apollo codegen:generate --localSchemaFile=graphql/graphql-schema.json,graphql/rest-schema.graphql --target=typescript --tagName=gql --outputFlat src/apollo/types/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-controls": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/node-logger": "^6.3.6",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.6",
    "@types/apollo-upload-client": "^14.1.0",
    "@types/graphql": "^14.5.0",
    "@types/react": "^17.0.15",
    "@types/react-router-dom": "^5.1.8",
    "apollo": "^2.33.4",
    "poeditor": "git+https://github.com/Reggionick/poeditor-cli.git#fix/key_value_json"
  },
  "wallaby": {
    "autoDetect": true,
    "files": [
      "src/**/*.{ts,tsx}",
      "!src/utils/AuthManager.ts",
      "!src/utils/i18n.ts",
      "!src/index.tsx",
      "!src/react-app-env.d.ts",
      "!src/reportWebVitals.ts",
      "!src/setupTests.ts",
      "!src/twin.d.ts",
      "!src/**/*.test.{ts,tsx}",
      "!src/apollo/client.ts",
      "!src/**/*.styles.{ts,tsx}"
    ]
  }
}
